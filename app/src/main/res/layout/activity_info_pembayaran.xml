<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".InfoPembayaran">

    <androidx.appcompat.widget.Toolbar
        android:id="@id/mytoolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_transparent"
        android:minHeight="?actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/mytoolbar">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/petunjuk_bayar" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10.0dip"
                android:text="Anda akan melakukan pembayaran registrasi calon santri dengan data sebagai berikut:" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#FAF9F9"
                app:cardElevation="10dp"
                app:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/ly_nama"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2.0">

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="Nama : "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@id/text_nama"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v01"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/ly_nama"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/azur" />

                    <LinearLayout
                        android:id="@+id/ly_id_santri"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v01"
                        android:orientation="horizontal"
                        android:weightSum="2.0">

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="ID : "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_id"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v02"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/ly_id_santri"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/azur" />

                    <LinearLayout
                        android:id="@+id/ly_unit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v02"
                        android:orientation="horizontal"
                        android:weightSum="2.0">

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="Unit : "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@id/text_unit"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v03"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/ly_unit"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/azur" />

                    <LinearLayout
                        android:id="@+id/ly_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v03"
                        android:layout_marginBottom="10.0dip"
                        android:orientation="horizontal"
                        android:weightSum="2.0">

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Email : "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@id/text_email"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp" />
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10.0dip"
                android:text="Jika data di atas benar silahkan transfer biaya registrasi dengan data pembayaran berikut:" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#FAF9F9"
                app:cardElevation="10dp"
                app:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/ly_nama_bank"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:text="Nama Bank : "
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:src="@drawable/bsi_logo" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/ly_nama_bank"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="@color/azur" />

                    <LinearLayout
                        android:id="@+id/ly_norek"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v1"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nomor Rekening : "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_no_rek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="3875837857"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/copy_norek"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_content_copy_24" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/ly_norek"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="@color/azur" />

                    <LinearLayout
                        android:id="@+id/ly_kode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v2"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kode Bank: "
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="451"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <View
                        android:id="@+id/v3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/ly_kode"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="@color/azur" />

                    <LinearLayout
                        android:id="@+id/ly_penerima"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v3"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Penerima : "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_penerima"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v4"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/ly_penerima"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/azur" />

                    <LinearLayout
                        android:id="@+id/ly_nominal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v4"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nominal Transfer : "
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. "
                            android:textColor="#680124"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/text_nominal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="123000"
                            android:textColor="#680124"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/copy_nominal"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_baseline_content_copy_24" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/note"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ly_nominal"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2.0">


                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="*Nomimal pas mempermudah kami mengecek pembayaran anda"
                            android:textColor="@color/orange"
                            android:textSize="11sp" />
                    </LinearLayout>


                    <View
                        android:id="@+id/v5"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/note"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="@color/azur" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v5"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginTop="20.0dip"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginBottom="20.0dip"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berita Transfer : "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_berita_transfer"
                            android:layout_width="wrap_content"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="REG [Nama Santri] [No.ID]"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/copy_berita_tf"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_content_copy_24" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/box_shape_warning"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:layout_margin="5dp"
                    android:text="Anda bisa lakukan konfirmasi pembayaran dari pukul 08.00 WIB - 20.00 WIB"/>
            </LinearLayout>


            <Button
                android:id="@+id/chatwabtn"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="20.0dip"
                android:background="@drawable/button_style"
                android:padding="7.0dip"
                android:text="Konfirmasi Pembayaran"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>