<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg3"
    tools:context=".Profileku">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mytoolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/grey_transparent"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar" />
    <LinearLayout
        android:id="@+id/ly_main"
        android:layout_below="@id/mytoolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="100dp"
            android:padding="5dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/user"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"/>
        <TextView
            android:id="@+id/text_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andi"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="andisusilo@gmail.com"
            android:padding="5dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:background="#F4CC8F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:fontFamily="@font/helvetica"
                android:textSize="11sp"
                android:text="Warning : Kesalahan pengisian data yang fatal, lebih baik untuk menghapus data calon santri, jika belum membayar dan mengulang untuk meregistrasi kembali pada menu Pendaftaran. \n\nCalon santri yang belum membayar biaya registrasi TIDAK terhitung sebagai pendaftar resmi PPDB PPITIS, keterlambatan dalam membayar dikhawatirkan tidak mendapatkan kuota."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@color/material_green_600"
            android:padding="3dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="7dp"
                android:textColor="@color/white"
                android:text="Nama Calon Santri"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Sekolah"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Status"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_no_data"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/ly_main"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        android:src="@drawable/no_data"
        android:layout_centerInParent="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recyclerview_pendaftar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ly_main"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        android:scrollIndicators="right"
        android:scrollbarAlwaysDrawHorizontalTrack="true"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>